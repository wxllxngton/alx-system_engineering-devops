#!/bin/bash
# Ping an IP address passed as an argument (5 times)
# Usage: ./script.sh {IP_ADDRESS}

# Check if an argument (IP address) is provided
if [ $# -ne 1 ]; then
  echo "Usage: $0 {IP_ADDRESS}"
  exit 1
fi

# Extract the IP address from the argument
ip_address="$1"

# Ping the IP address 5 times and display the results
ping -c 5 "$ip_address"
